<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/precoG"
        android:layout_width="match_parent"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal"
        android:layout_margin="@dimen/margin_top"
        android:gravity="center_horizontal"
        android:text="@string/precoG"
        android:textColor="@color/corTexto" />

    <TextView
        android:id="@+id/precoGasol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_margin="@dimen/margin_top"
        android:layout_columnSpan="1"
        android:layout_columnWeight="2"
        android:textColor="@color/corTexto" />
    <SeekBar
        android:id="@+id/precoGasolina"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_top"
        android:layout_columnWeight="5"
        android:layout_row="1"
        android:layout_gravity="fill_horizontal"
        android:max="800"
        android:progress="400"
        android:layout_column="1" />


    <TextView
        android:id="@+id/precoE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal"
        android:layout_margin="@dimen/margin_top"
        android:gravity="center_horizontal"
        android:text="@string/precoE"
        android:textColor="@color/corTexto" />
    <TextView
        android:id="@+id/precoEt"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_margin="@dimen/margin_top"
        android:layout_columnSpan="1"
        android:layout_columnWeight="2"
        android:textColor="@color/corTexto" />



    <SeekBar
        android:id="@+id/precoEtanol"
        android:layout_height="wrap_content"
        android:layout_columnWeight="5"
        android:layout_margin="@dimen/margin_top"
        android:layout_row="3"
        android:layout_gravity="fill_horizontal"
        android:max="800"
        android:progress="400"/>


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="4"
        android:layout_columnSpan="2"
        android:hint="@string/EMelhor"
        android:layout_column="0">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/resultado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="hint"
            android:textColor="@color/corTexto" />
    </android.support.design.widget.TextInputLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="center"
        tools:srcCompat="@mipmap/ic_launcher" />


</GridLayout>